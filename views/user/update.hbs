<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <form action="/user/update/{{path}}" method="post">
        {{#if account}}
            <h1>Update Account</h1>
            {{> messages}}
            <div class="form-group">
                <label for="username">Name</label>
                <input type="username" id="username" name="username" class="form-control" value="{{user.username}}">
            </div>
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input type="email" id="email" name="email" class="form-control" value="{{user.email}}">
            </div>
            <div class="form-group">
                <label for="password">Old Password</label>
                <input type="password" id="password" name="password" class="form-control">
                <label for="password">New Password</label>
                <input type="password" id="password" name="password" class="form-control">
                <label for="password">Confirm Password</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            <div class="form-group">
                <label for="telephone">Telephone</label>
                <input type="tel" id="telephone" name="telephone" class="form-control" value="{{user.telephone}}">
            </div>
        {{/if}}
        {{#if address}}
            <h1>Update Contacts</h1>
            <div class="form-group">
                <label for="country">Country</label>
                <input type="text" id="country" name="country" class="form-control" value="{{user.address.country}}">
                <label for="region">Region</label>
                <input type="text" id="region" name="region" class="form-control" value="{{user.address.region}}">
                <label for="city">City</label>
                <input type="text" id="city" name="city" class="form-control" value="{{user.address.city}}">
                <label for="zip">Zip</label>
                <input type="text" id="zip" name="zip" class="form-control" value="{{user.address.zip}}">
                <label for="street">Street</label>
                <input type="text" id="street" name="street" class="form-control" value="{{user.address.street}}">
                <label for="building">Building</label>
                <input type="text" id="building" name="building" class="form-control" value="{{user.address.building}}">
                <label for="appartament">Appartament</label>
                <input type="text" id="appartament" name="appartament" class="form-control" value="{{user.address.appartament}}">
            </div>
            {{/if}}
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>