<div class="row">
  <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
      {{successMsg}}
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-3">{{!--Filter Field | Separate File: Sidebar--}}
    {{>sidebar}}
  </div>
  <div class="col-md-9 flexbox">{{!--Products List--}}
    {{# each products as |pro|}}
      <div class="product">
        <div class="caption">
          <img src="{{pro.imagePath}}" alt="...">
        </div>
        {{#if pro.discount}}
        <div class="discount">{{pro.discount}} %</div>
        {{/if}}
        <a class="badg" href="/shop/wish/{{pro._id}}"><i class="fa fa-heart" aria-hidden="true"></i></a>
        <div class="description">
          <h3>{{pro.title}}</h3>
          <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusantium ab ex eos quos itaque iusto qui, assumenda eveniet obcaecati fugiat.</p>
          <p>Developers: {{#each pro.developers}}{{this}} {{/each}}</p>
          <a href="/shop/product/{{pro._id}}">more detail</a>
        </div>
        <p>{{#each pro.genre}}<span class="label label-primary">{{this}}</span> {{/each}}</p>
        {{#if pro.reviews}}
        <p>review: {{pro.reviews.length}}</p>
        <p>rating: {{pro.rating}}</p>
        {{/if}}      
        <div class="price"><small><i class="fa fa-usd" aria-hidden="true"></i></small>
        {{#if pro.discount}}
        <strong>{{pro.newPrice}}</strong>
        <small>{{pro.price}}</small>
        {{else}}
        <strong>{{pro.price}}</strong>
        {{/if}}
        </div>
        {{#if pro.stock}}
        <form action="/shop/cart/{{pro._id}}" method="post" id="{{pro._id}}">{{!--Buy Now || Add to Cart--}}
          {{#each pro.platforms}}
          <input id="{{this}}-{{pro._id}}" type="radio" name="platform" value="{{this}}" hidden required>
          <label class="label" for="{{this}}-{{pro._id}}">{{this}}</label>
          {{/each}}
          <p class="msg">check one pls</p>
        </form>
        <button class="buy btn btn-success" type="submit" form="{{pro._id}}">
          ADD TO CART <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
        </button>
        {{else}}
        <button class="buy btn btn-success" type="submit" form="{{pro._id}}">
          ORDER NOW <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
        </button>
        {{/if}}
      </div>
    {{/each}}
  </div>
</div>